{
  "name": "professional-timer-pwa",
  "version": "1.0.0",
  "description": "A beautiful circular timer PWA for productivity and focus sessions",
  "main": "index.html",
  "scripts": {
    "start": "npm run build && npx serve dist -p 8000",
    "dev": "npx live-server --port=8000",
    "build": "node build.js",
    "build:advanced": "node build-advanced.js",
    "build-icons": "node generate-icons.js",
    "serve-dist": "npx serve dist -p 8000",
    "deploy": "npm run build && npm run serve-dist",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "timer",
    "pwa",
    "productivity",
    "focus",
    "pomodoro"
  ],
  "author": "Timer App",
  "license": "MIT",
  "devDependencies": {
    "serve": "^14.2.0",
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "canvas": "^2.11.2"
  }
}
